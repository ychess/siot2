<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/siotdb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">gugia</property>
    <property name="hibernate.connection.password">123123</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.query.substitutions">true 1, false 0</property>
    <property name="hibernate.default_batch_fetch_size">20</property>
    <property name="hibernate.max_fetch_depth">2</property>
    <mapping class="com.xkt.siot.domain.Cdorm"/>
    <mapping class="com.xkt.siot.domain.Coordinator"/>
    <mapping class="com.xkt.siot.domain.Delivery"/>
    <mapping class="com.xkt.siot.domain.Device"/>
    <mapping class="com.xkt.siot.domain.Log"/>
    <mapping class="com.xkt.siot.domain.Profile"/>
    <mapping class="com.xkt.siot.domain.Ucorm"/>
    <mapping class="com.xkt.siot.domain.User"/>
  </session-factory>
</hibernate-configuration>
